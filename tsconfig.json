{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "backend",
    "outDir": "dist",
    "sourceMap": true,
    "types": ["node"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["backend"],
  "exclude": ["node_modules", "dist"]
}
